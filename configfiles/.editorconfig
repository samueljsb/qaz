root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{sh,zsh}]
indent_size = 2

[*.html]
indent_size = 2

[*.tex]
indent_size = 2

[*.{json,hjson}]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

# Tab indentation
[Makefile]
indent_style = tab
